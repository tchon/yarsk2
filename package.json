{
  "name": "yarsk2",
  "version": "2.0.0",
  "description": "Yet Another React Starter Kit 2: mainly for library development using React, Webpack, Babel, Sass, Mocha, and Karma",
  "main": "src/index.js",
  "scripts": {
    "test": "./node_modules/karma/bin/karma start conf/karma/karma.conf.js --single-run",
    "test:watch": "./node_modules/karma/bin/karma start conf/karma/karma.conf.js",
    "test:coverage": "./node_modules/karma/bin/karma start conf/karma/karma.coverage.conf.js --single-run",
    "test:ci": "./node_modules/karma/bin/karma start conf/karma/karma.ci.conf.js --single-run",
    "start": "./node_modules/.bin/webpack-dev-server --config conf/webpack/webpack.config.js --hot --progress --colors --inline --content-base ./build",
    "build": "./node_modules/.bin/webpack --config conf/webpack/webpack.production.js",
    "build:gh": "npm run build && node ./build-gh-pages.js && rm -r ./dist"
  },
  "authors": [
    "Tim Chon <timchon@sonic.net>",
    "Brad Daily <brad@bradleyboy.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-eslint": "^4.1.0",
    "babel-loader": "^5.3.2",
    "chai": "^3.2.0",
    "css-loader": "^0.16.0",
    "eslint": "^1.3.0",
    "eslint-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "gh-pages": "^0.3.1",
    "html-webpack-plugin": "^1.6.1",
    "isparta": "^3.0.3",
    "isparta-instrumenter-loader": "^0.2.1",
    "karma": "^0.13.9",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.1",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-webpack": "^1.7.0",
    "less": "^2.5.1",
    "less-loader": "^2.2.0",
    "mocha": "^2.2.5",
    "node-sass": "^3.2.0",
    "phantomjs": "^1.9.18",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^2.0.1",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.0",
    "webpack-dev-server": "^1.10.1"
  }
}
